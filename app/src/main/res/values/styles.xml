<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.V7.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#bcbcbc</item>
        <item name="colorPrimaryDark">#b4b4b4</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="mytoast">
        <item name="textBold">true</item>
        <item name="textColor">#000</item>
        <item name="textSize">14sp</item>
        <item name="colorBackground">#fff</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">#fff</item>
        <item name="iconStart">@drawable/shape_toast</item>
        <item name="iconEnd">@drawable/shape_toast</item>
        <item name="length">LONG</item> LONG or SHORT
        <item name="gravity">center</item> top or center
        <item name="radius">5dp</item>
    </style>
</resources>
